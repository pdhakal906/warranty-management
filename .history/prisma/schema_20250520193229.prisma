generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String         @id @default(uuid())
  name          String
  description   String?
  serialNumber  String         @unique @db.VarChar(16)
  serialNumbers SerialNumber[] // Keep this
  sale          Sale?          @relation(fields: [saleId], references: [id])
  saleId        String? // nullable if not sold yet
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model SerialNumber {
  id        String   @id @default(uuid())
  number    String   @unique @db.VarChar(16)
  product   Product? @relation(fields: [productId], references: [id])
  productId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductTemp {
  id                String             @id @default(uuid())
  name              String
  SerialNumberTemps SerialNumberTemp[] // Keep this
}

model SerialNumberTemp {
  id            String       @id @default(uuid())
  number        String       @unique @db.VarChar(16)
  productTemp   ProductTemp? @relation(fields: [productTempId], references: [id])
  productTempId String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model Customer {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Sale        Sale[]
}

model Sale {
  id             String    @id @default(uuid())
  customer       Customer  @relation(fields: [customerId], references: [id])
  customerId     String
  dateOfPurchase DateTime
  products       Product[] // one-to-many: a sale has many products
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}
